    <ImageView
        android:id="@+id/zona2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:scaleType="centerInside"
        android:src="@drawable/zona2" />

    <ImageView
        android:id="@+id/zona4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:scaleType="centerInside"
        android:src="@drawable/zona4" />
</RelativeLayout>